<mvc:View
    controllerName="com.dhenskript.defecttracker.controller.SignIn"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="signIn"
        title="Defect Tracker +"
        titleAlignment="Center"
        visible="true"
    >
        <content>
            <VBox
                width="100%"
                height="100%"
                alignItems="Center"
                justifyContent="Center"
            >
                <VBox>
                    <f:SimpleForm
                        id="SimpleFormToolbar"
                        layout="ResponsiveGridLayout"
                        title="Sign In Form"
                    >
                        <f:content>
                            <Label text="User Name" />
                            <Input
                                id="userName"
                                placeholder="Deepthi Hariraman"
                                autocomplete="false"
                            />
                            <Label text="Password" />
                            <Input
                                type="Password"
                                placeholder="@#8DZK@1"
                                showClearIcon="false"
                                autocomplete="false"
                            />
                            <VBox
                                direction="Row"
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <Link
                                    text="Not a user?"
                                    press=".onNavSignUpPage"
                                />
                                <Button
                                    text="Sign Up"
                                    press=".onNavSignUpPage"
                                />
                            </VBox>
                            <Button
                                text="Sign In"
                                press=".onSignIn"
                                type="Emphasized"
                            />
                        </f:content>
                    </f:SimpleForm>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
